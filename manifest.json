{
  "manifest_version": 2,
  "name": "Preserve Email",
  "version": "0.1.5",
  "description": "Preserves selected messages by embedding remote content (like images) using the MHTML format.",
  "author": "Tommy Keswick",
  "icons": {
    "48": "icons/preserver-icon.svg"
  },
  "permissions": [
    "messagesRead",
    "downloads",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "notifications"
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "preserver@eml.tools",
      "strict_min_version": "91.0",
      "update_url": "https://raw.githubusercontent.com/t4k/preserve-email/main/updates.json"
    }
  },
  "commands": {
    "preserve-email": {
      "suggested_key": {
        "default": "Ctrl+Shift+P"
      },
      "description": "Preserve selected message as a self-contained .eml file."
    }
  }
}
